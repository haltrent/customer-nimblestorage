<?xml version="1.0" encoding="UTF-8"?>
<vars xmlns="http://www.idiominc.com/opentopic/vars">
    <!-- The footer that appears on odd-numbered pages. -->
    <variable id="Body odd footer"><param ref-name="pagenum"/></variable>

    <!-- The footer that appears on even-numbered pages. -->
    <variable id="Body even footer"><param ref-name="pagenum"/></variable>

    <!-- The footer that appears on the first page of a chapter. -->
    <variable id="Body first footer"><param ref-name="pagenum"/></variable>

    <!-- The header that appears on odd-numbered pages. -->
    <variable id="Body odd header"><param ref-name="heading"/>&#xA0;<param ref-name="heading-2"/></variable>

    <!-- The header that appears on even-numbered pages. -->
    <variable id="Body even header"><param ref-name="heading"/>&#xA0;<param ref-name="heading-2"/></variable>
    <!-- The header that appears on the odd-numbered table of contents
         pages. -->
    <variable id="Toc odd header"><param ref-name="prodname"/></variable>

    <!-- The header that appears on the odd-numbered table of contents
         pages. -->
    <variable id="Toc even header"><param ref-name="pagenum"/></variable>
    <!-- The header that appears on the odd-numbered index pages. -->
    <variable id="Index odd header"><param ref-name="prodname"/></variable>

    <!-- The header that appears on the even-numbered index pages. -->
    <variable id="Index even header"><param ref-name="prodname"/></variable>

    <!-- The formatting used to display ordered lists (e.g., "1., 2." or
         "1), 2)" -->
    <variable id="Ordered List Number"><param ref-name="number"/> </variable>
    <!-- The string used to label an appendix within the table of contents. -->
    <variable id="Table of Contents Appendix">Addendum</variable>
    <!-- Text to use for appendix titles.-->
    <variable id="Appendix with number">Addendum</variable>

    <!-- Image path to use for a note of "note" type. -->
    <variable id="note Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>
    <!-- Image path to use for a note of "notice" type. -->
    <variable id="notice Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>

    <!-- Image path to use for a note of "fastpath" type. -->
    <variable id="fastpath Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>

    <!-- Image path to use for a note of "important" type. -->
    <variable id="important Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>

    <!-- Image path to use for a note of "remember" type. -->
    <variable id="remember Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>

    <!-- Image path to use for a note of "restriction" type. -->
    <variable id="restriction Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>

    <!-- Image path to use for a note of "tip" type. -->
    <variable id="tip Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>

    <!-- Image path to use for a note of "other" type. -->
    <variable id="other Note Image Path">Customization/OpenTopic/common/artwork/g_Note.svg</variable>

</vars>